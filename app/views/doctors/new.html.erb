<h1>Add a Doctor</h1>
<%= form_with(model: @doctor, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, required: true, placeholder: "First Name"%>

    <%= f.label :last_name %>
    <%= f.text_field :last_name, required: true, placeholder: "Surname" %>
  </div>

    <%= f.submit "Add", class: "ui green button inverted" %>
<% end %>    

